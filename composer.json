{
    "name": "syntro/ssto",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer for Syntro Projects",
    "keywords": [
        "silverstripe",
        "recipe",
        "CMS"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.2.0",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "4.6.1",
        "silverstripe/login-forms": "4.2.1",
        "syntro/recipe-elemental-bootstrap": "0.2.0",
        "syntro/silverstripe-seo": "1.0.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "symbiote/silverstripe-phpstan": "^4.0",
        "phpstan/phpstan-shim": "^0.11",
        "squizlabs/php_codesniffer": "*"
    },
    "extra": {
        "expose": [
            "app/client/dist",
            "app/client/files"
        ],
        "project-files": [
            "app/_config/*",
            "app/tests/*",
            "app/client/*",
            "app/src/*",
            "app/templates/*",
            ".editorconfig",
            ".gitignore",
            "phpcs.xml",
            "phpstan.neon",
            "phpunit.xml",
            "package.json"
        ],
        "public-files": [
            "assets/*",
            "app/client/dist",
            "app/client/files",
            "favicon.ico"
        ],
        "resources-dir": "_resources"
    },
    "config": {
        "process-timeout": 600
    },
    "scripts": {
        "phpcs": "~/.composer/vendor/bin/phpcs app/",
        "phpcbf": "~/.composer/vendor/bin/phpcbf app/",
        "phpstan": "vendor/bin/phpstan analyse app/src --memory-limit=1G -c phpstan.neon -a vendor/symbiote/silverstripe-phpstan/bootstrap.php --no-ansi --level 4",
        "phpunit": "vendor/bin/phpunit app/tests/"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
