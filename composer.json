{
    "name": "syntro/ssto",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer for Syntro Projects",
    "keywords": [
        "silverstripe",
        "recipe",
        "CMS"
    ],
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.3",
        "silverstripe/recipe-plugin": "^2.0",
        "silverstripe/recipe-cms": "^6.0",
        "silverstripe/login-forms": "^6.0",
        "wilr/silverstripe-googlesitemaps": "^4.0",
        "syntro/silvershare": "^6.0"
    },
    "require-dev": {
        "syntro/silverstripe-phpstan": "^6.0",
        "phpunit/phpunit": "^11.0",
        "squizlabs/php_codesniffer": "*"
    },
    "extra": {
        "expose": [
            "app/client/dist",
            "app/client/files"
        ],
        "project-files": [
            "app/_config/*",
            "app/tests/*",
            "app/client/*",
            "app/src/*",
            "app/templates/*",
            ".editorconfig",
            ".gitignore",
            "phpcs.xml",
            "phpstan.neon",
            "phpunit.xml",
            "package.json"
        ],
        "public-files": [
            "assets/*",
            "app/client/dist",
            "app/client/files",
            "favicon.ico"
        ],
        "resources-dir": "_resources",
        "branch-alias": {
            "dev-master": "2.x-dev"
        }
    },
    "config": {
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/vendor-plugin": true,
            "silverstripe/recipe-plugin": true
        }
    },
    "scripts": {
        "phpcs": "vendorbin/phpcs app/",
        "phpcbf": "vendor/bin/phpcbf app/",
        "phpstan": "vendor/bin/phpstan analyse app/src --memory-limit=1G -c phpstan.neon -a vendor/syntro/silverstripe-phpstan/bootstrap.php --no-ansi --level 4",
        "phpunit": "vendor/bin/phpunit app/tests/"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
